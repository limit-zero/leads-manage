<div class="row">
  <div class="col">
    <h3 class="mb-0 float-left">
      Manage Tag &quot;{{ model.name }}&quot;
    </h3>
    {{#confirm-button
      class="btn btn-sm btn-outline-danger d-inline float-right clickable"
      onConfirm=(route-action "delete" model.id "tag.index") as |button|
    }}
      {{entypo-icon "cross"}} {{#unless button.hasConfirmed}}Delete{{else}}You Sure?{{/unless}}
    {{/confirm-button}}
  </div>
</div>
<hr>

{{ partial "tag/form" }}

<div class="row">
  <div class="col">
    <button class="btn btn-success" {{action (route-action "update" model)}}>
      {{entypo-icon "check"}} Save
    </button>
  </div>
</div>
