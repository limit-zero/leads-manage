<div class="row">
  <div class="col">
    <h3 class="mb-0">
      Create Customer
    </h3>
  </div>
</div>
<hr>

<form {{action (route-action "create" model) on="submit"}}>
  {{partial "customer/form"}}

  <div class="row">
    <div class="col">
      <button class="btn btn-success" disabled={{model.externalSource.identifier}} type="submit">
        {{entypo-icon "check"}} Save
      </button>
    </div>
  </div>
</form>
