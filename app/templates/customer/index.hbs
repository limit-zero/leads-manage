<div class="row">
  <div class="col">
    <h3 class="mb-0">
      Customers
    </h3>
  </div>
</div>
<hr>

{{#paginate-models
  models=model
  routeName='customer.index'
  totalCount=totalCount
  hasNextPage=hasNextPage
  endCursor=endCursor
  first=first
  after=after
  ascending=ascending
  sortBy=sortBy
  sortOptions=sortOptions
  as |model|
}}
  {{partial 'customer/list'}}
{{/paginate-models}}

<button class="btn btn-success create float-right fixed-bottom" {{action (route-action "transitionTo" "customer.create")}}>
  {{entypo-icon "pencil"}} Create
</button>
