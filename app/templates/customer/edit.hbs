<div class="row">
  <div class="col">
    <h3 class="mb-0 float-left">
      Manage Customer &quot;{{ model.name }}&quot;
      {{#if model.externalSource}}(Read Only){{/if}}
    </h3>
    <button class="btn btn-outline-danger btn-sm float-right" disabled={{model.externalSource.identifier}} {{action (route-action "delete" model.id "customer.index")}}>
      {{entypo-icon "cross"}} Delete
    </button>
  </div>
</div>
<hr>

{{ partial "customer/form" }}

<div class="row">
  <div class="col">
    <button class="btn btn-success" disabled={{model.externalSource.identifier}} {{action (route-action "update" model)}}>
      {{entypo-icon "check"}} Save
    </button>
  </div>
</div>
