<div class="row">
  <div class="col">
    <h3 class="mb-0 float-left">
      Manage Customer &quot;{{ model.name }}&quot;
      {{#if model.externalSource}}(Read Only){{/if}}
    </h3>
    {{#confirm-button
      class="btn btn-sm btn-outline-danger d-inline float-right clickable"
      disabled=model.externalSource.identifier
      onConfirm=(route-action "delete" model.id "customer.index") as |button|
    }}
      {{entypo-icon "cross"}} {{#unless button.hasConfirmed}}Delete{{else}}You Sure?{{/unless}}
    {{/confirm-button}}
  </div>
</div>
<hr>

{{ partial "customer/form" }}

<div class="row">
  <div class="col">
    <button class="btn btn-success" disabled={{model.externalSource.identifier}} {{action (route-action "update" model)}}>
      {{entypo-icon "check"}} Save
    </button>
  </div>
</div>
