<div class="container mt-5">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <div class="jumbotron">
        <h3 class="display-4">Log In</h3>
        <hr class="m-y-1">
        <form {{action "authenticate" on="submit"}}>
          <div class="form-group">
            <label for="username">Email Address</label>
            {{input id="username" required=true class="form-control" type="email" value=username autocomplete="username email"}}
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            {{input id="password" required=true class="form-control" type="password" value=password autocomplete="current-password"}}
          </div>
          {{#if errorMessage}}
            <div class="alert-danger alert m-b-1" role="alert"><strong>Oh Snap!</strong> {{errorMessage}}</div>
          {{/if}}
          <button type="submit" class="btn btn-primary">Sign In</button>
        </form>
      </div>
    </div>
  </div>
</div>
