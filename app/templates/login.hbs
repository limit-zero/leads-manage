<div class="container mt-5">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <div class="card z-depth-1 border-0">
        <form {{action "authenticate" on="submit"}}>
          <div class="card-header"></div>
          <div class="card-body">
            <h1 class="card-title">Welcome</h1>
            <hr>
            <div class="form-group">
              <label for="login-username">Email Address</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">{{entypo-icon "email"}}</span>
                </div>
                {{input id="login-username" required=true class="form-control form-control-lg" type="email" value=username autocomplete="username email"}}
              </div>
            </div>
            <div class="form-group mb-0">
              <label for="login-password">Password</label>
               <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">{{entypo-icon "key"}}</span>
                </div>
                {{input id="login-password" required=true class="form-control form-control-lg" type="password" value=password autocomplete="current-password"}}
              </div>
            </div>
          </div>
          <div class="card-footer">
            <button type="submit" class="btn btn-block btn-lg btn-primary" disabled={{isLoading}}>Sign In</button>
            {{#if errorMessage}}
              <div class="alert-danger mt-3 mb-0 alert" role="alert"><strong>Oh Snap!</strong> {{errorMessage}}</div>
            {{/if}}
          </div>
          {{progress-bar show=isLoading}}
        </form>
      </div>
    </div>
  </div>
</div>
