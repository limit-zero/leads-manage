<div class="row">
  <div class="col">
    <div class="row">
      <div class="col col-sm-6">
        {{list-controls/search phrase=phrase onSubmit=(action "search")}}
      </div>
      <div class="col col-sm-6">
        <div class="btn-toolbar float-right" role="toolbar" aria-label="Filter Toolbar">
          {{list-controls/sort
            class="mr-2"
            options=sortOptions
            ascending=ascending
            sortBy=sortBy
            disabled=isSortDisabled
          }}
          {{list-controls/limit options=limitOptions limit=first}}
        </div>
      </div>
    </div>
  </div>
</div>
