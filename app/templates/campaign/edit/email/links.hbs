{{#bs-modal show=true size="large" onHidden=(route-action "transitionTo" "campaign.edit.email") as |modal|}}
  {{#modal.header}}
    <h5 class="modal-title">Manage Email Campaign Links</h5>
    <button {{action modal.actions.hide}} type="button" class="close" aria-label="Close">
      {{entypo-icon "cross"}}
    </button>
  {{/modal.header}}
  {{#modal.body class="pt-0"}}
    {{#each urlGroups as |urlGroup|}}
      <div class="card mt-3">
        <div class="card-header">

          <div class="input-group">
            <div class="input-group-prepend">
              <div class="input-group-text">
                <input type="checkbox" checked aria-label="Enable/disable the link">
              </div>
            </div>
            <input type="text" readonly class="form-control" value="{{urlGroup.url.values.resolved}}" aria-label="Text input with checkbox">
            <div class="input-group-append">
              <a class="btn btn-info" role="button" title="View Link in New Window" target="_blank" rel="noopener noreferer" href="{{urlGroup.url.values.resolved}}">{{entypo-icon "eye"}}</a>
            </div>
          </div>
        </div>


        <div class="card-body pt-0">
          {{#each urlGroup.deploymentGroups as |deploymentGroup|}}
            <div class="card mt-3">
              <div class="card-header bg-light font-weight-bold">
                <input class="mr-1" type="checkbox" checked aria-label="Enable/disable the link">
                {{deploymentGroup.deployment.name}}
              </div>
              <div class="card-body pt-0">
                {{#each deploymentGroup.sendGroups as |sendGroup|}}
                  <p class="mb-0 mt-3">
                    <input class="mr-1" type="checkbox" checked aria-label="Enable/disable the link">
                    Sent on
                    {{moment-format sendGroup.send.sentDate "ddd, MMM Do, YYYY @ h:mma"}}
                    to
                    {{format-number sendGroup.send.metrics.sent "0,0"}} subscribers.
                  </p>
                {{/each}}
              </div>
            </div>
          {{/each}}
        </div>


        <div class="card-footer"></div>
      </div>
    {{/each}}
  {{/modal.body}}
  {{#modal.footer}}
  {{/modal.footer}}
{{/bs-modal}}
