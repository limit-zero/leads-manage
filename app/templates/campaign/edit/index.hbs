<form {{action (route-action "update" model) on="submit"}}>
  <div class="card-body">
    {{ partial "campaign/form" }}
  </div>
  <div class="card-footer d-flex justify-content-between">
    {{model-save-button disabled=isSaveDisabled}}

    <div class="btn-group btn pr-0">
      <button class="btn btn-info clickable" disabled={{isActionRunning}} {{action (route-action "clone" model.id)}}>
        {{entypo-icon "copy"}} Clone
      </button>
      {{confirm-button
        icon="trash"
        label="Delete"
        class="btn-danger"
        disabled=isActionRunning
        onConfirm=(route-action "delete" model.id "campaign.index")
      }}
    </div>
  </div>
</form>
