<div class="row mt-3">
  <div class="col">
    <div class="form-group">
      {{textarea
        rows="5"
        class="form-control"
        value=html
        id="html"
        aria-describedby="htmlHelp"
        paste=(action 'handlePaste')
        focusIn=(action 'selectAll')
        disabled=processing
      }}
      <small id="htmlHelp" class="form-text">Paste HTML to process and track links.</small>
    </div>
  </div>
</div>

<div class="form-group">
  <button class="btn btn-success" disabled={{eq canProcess false}} {{action "process"}}>
    {{entypo-icon "upload-to-cloud"}} Process
  </button>
  <button class="btn btn-warning" disabled={{eq canProcess false}} {{action "clear"}}>
    {{entypo-icon "cross"}} Clear
  </button>
</div>
{{#if processing}}
  <small class="text-muted">Processing, please wait...</small>
  {{progress-bar}}
{{/if}}

{{#if trackedResult}}
  <div class="form-group">
    <label for="trackedHtml">Tracked HTML</label>
    {{textarea
      rows="8"
      class="form-control"
      value=trackedResult
      id="trackedHtml"
      aria-describedby="trackedHtmlHelp"
      readonly=true
      focusIn=(action 'selectAll')
      disabled=processing
    }}
    <small id="trackedHtmlHelp" class="form-text">Copy this HTML and place in your email client.</small>
  </div>
{{else}}
  {{#if hasFinished}}
    <h5>
      {{#if results.length}}Found {{results.length}} Link(s){{else}}No links found.{{/if}}
    </h5>
    {{#each results as |url|}}
      {{extracted-url url=url}}
    {{/each}}
    {{#if results.length}}
      <div class="form-group">
        <button class="btn btn-success" {{action "createdTrackedHtml"}}>
          {{entypo-icon "edit"}} Generate HTML
        </button>
      </div>
    {{/if}}
  {{/if}}
{{/if}}
