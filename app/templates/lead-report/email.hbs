<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs" role="tablist">
          <li class="nav-item">{{#link-to "lead-report.email.metrics" class="nav-link" role="tab"}}Metrics{{/link-to}}</li>
          <li class="nav-item">{{#link-to "lead-report.email.leads" class="nav-link" role="tab"}}Leads{{/link-to}}</li>
          <li class="nav-item">{{#link-to "lead-report.email.export" class="nav-link" role="tab"}}List/Export{{/link-to}}</li>
          <li class="nav-item">{{#link-to "lead-report.email.activity" class="nav-link" role="tab"}}Activity{{/link-to}}</li>
        </ul>
      </div>
      <div class="card-body">
        {{#if isLoading}}
          <small class="text-muted">Loading...</small>
          {{progress-bar show=isLoading}}
        {{else}}
          {{outlet}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
