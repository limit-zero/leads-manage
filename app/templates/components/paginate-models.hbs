<div class="row">
  <div class="col">

    <div class="card list-index">

      <div class="card-header"></div>

      <div class="card-body">
        <div class="row">
          <div class="col">
            <div class="row">
              <div class="col col-sm-6">
                {{ partial "list/search-controls"}}
              </div>
              <div class="col col-sm-6">
                <div class="btn-toolbar float-right" role="toolbar" aria-label="Filter Toolbar">
                  {{ partial "list/sort-filter" }}
                  {{ partial "list/limit-filter" }}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="list-group list-group-flush">
        {{#each models as |model|}}
          {{yield model}}
        {{else}}
          <p class="text-muted">No results.</p>
        {{/each}}
      </div>

      <div class="card-footer border-0"></div>

    </div>

  </div>
</div>




