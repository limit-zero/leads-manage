<div class="row mt-3 mb-3">
  <div class="col">
    {{#if paramsCount}}
      {{#each mergedParams as |param|}}
        <span class="badge badge-pill badge-info">
          <span class="h6 d-block m-1">{{param.key}}={{param.encodedValue}}</span>
        </span>
      {{/each}}
    {{else}}
      <h6 class="text-info mb-0">No URL parameters currently set.</h6>
    {{/if}}
  </div>
</div>

<div class="row">
  <div class="col">
    <button class="btn btn-primary" {{action "toggleSettings" true}}>
      {{entypo-icon "cog"}}
      {{#if showSettings}}{{entypo-icon "chevron-small-down"}}{{else}}{{entypo-icon "chevron-small-up"}}{{/if}}
    </button>
  </div>
</div>

{{#if showSettings}}
  <div class="row mt-3">
    <div class="col-12 col-lg-6 mb-3">
      {{extracted-url/params
        class="mnh-100"
        modelId=model.host.id
        urlParams=model.host.urlParams
        value=model.host.value
      }}
    </div>
    <div class="col-12 col-lg-6 mb-3">
      {{extracted-url/params
        class="mnh-100"
        modelId=model.id
        urlParams=model.urlParams
        value=model.values.resolved
      }}
    </div>
  </div>
{{/if}}
