<div class="card-body d-flex flex-row justify-content-between">
  <div class="d-flex flex-column">
    <span class="h1 mb-0 my-auto {{textColorClass}}">
      {{entypo-icon icon}}
    </span>
  </div>

  <div class="d-flex flex-column text-right w-100">
    <div class="text-uppercase">{{title}}</div>
    <div class="h4 mb-0 {{textColorClass}}" title={{value}}>
      {{#if isLoading}}
        {{progress-bar color=color show=true class="ml-auto mt-1 w-50"}}
      {{else}}
        {{format-number value format=format}}
        {{if suffix suffix}}
      {{/if}}
    </div>
    {{#if hasSecondaryValue}}
      <span class="h5 mb-0 text-muted" title={{secondaryValue}}>
        {{#unless isLoading}}
          {{format-number secondaryValue format=format2}}
          {{if secondarySuffix secondarySuffix}}
        {{/unless}}
      </span>
    {{else}}
      <span class="h5 mb-0 text-muted">&nbsp;</span>
    {{/if}}
  </div>
</div>
{{#if subtitle}}
  <div class="text-center text-muted border-top py-2">
    <small class="text-muted text-uppercase">{{subtitle}}</small>
  </div>
{{/if}}
