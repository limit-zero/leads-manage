{{#power-calendar
  center=center
  selected=selected
  onCenterChange=(action (mut center) value="moment")
  onSelect=(action "setDate" value="moment") as |calendar|}}
    {{calendar.nav}}
    {{calendar.days minDate=(readonly minDate) maxDate=(readonly maxDate)}}
    {{#if canClear}}
      <button
        class="btn btn-sm btn-outline-primary mt-1 float-right"
        disabled={{disableRemove}}
        {{action "clearDate"}}
      >
        {{entypo-icon "cross"}} Clear
      </button>
    {{/if}}
{{/power-calendar}}
