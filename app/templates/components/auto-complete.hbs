{{#if multiple}}
  {{#power-select-multiple
    triggerClass=triggerClass
    search=(perform search)
    selected=selected
    placeholder=placeholder
    onchange=(if onChange onChange (action (mut selected)))
    closeOnSelect=closeOnSelect
    disabled=disabled
    as |model|}}
      {{ yield model }}
  {{/power-select-multiple}}
{{else}}
  {{#power-select
    triggerClass=triggerClass
    search=(perform search)
    selected=selected
    placeholder=placeholder
    allowClear=allowClear
    closeOnSelect=closeOnSelect
    disabled=disabled
    onchange=(if onChange onChange (action (mut selected)))
    as |model|}}
      {{ yield model }}
  {{/power-select}}
{{/if}}
