{{#link-to
  "video.edit" item.id
  class="list-group-item list-group-item-action d-flex flex-row justify-content-between"
}}
  <div class="d-flex mr-2">
    {{#if item.thumbnail}}
      <div class="video-thumbnail-container mr-2">
        <img src={{item.thumbnail}} alt={{item.name}}>
      </div>
    {{/if}}

    <div class="d-flex flex-column video-contents-container">
      <h4 class="mb-2">{{item.name}}</h4>
      {{#if item.customer.name}}
        <h5 class="mb-2">{{item.customer.name}}</h5>
      {{/if}}
      {{#if item.description}}
        <div class="mb-2">{{{item.description}}}</div>
      {{/if}}
      <small class="d-block">ID: {{item.id}}</small>
      {{#if item.externalSource.identifier}}
        <small class="d-block">From {{item.externalSource.namespace}}: {{item.externalSource.identifier}}</small>
      {{/if}}
    </div>
  </div>


  <div class="d-md-flex flex-column d-none">
    {{#if item.externalSource.createdAt}}
      <small>{{entypo-icon "clock"}} Created {{moment-format item.externalSource.createdAt "MMM Do, YYYY h:mm a"}}</small>
    {{/if}}
    {{#if item.externalSource.updatedAt}}
      <small>{{entypo-icon "clock"}} Updated {{moment-format item.externalSource.updatedAt "MMM Do, YYYY h:mm a"}}</small>
    {{/if}}
  </div>
{{/link-to}}
