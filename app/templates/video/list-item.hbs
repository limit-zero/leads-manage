<li class="list-group-item list-group-item-action d-flex flex-row justify-content-between">
  <div class="d-flex mr-2">
    {{#if item.images.length}}
      <div class="video-thumbnail-container mr-2 d-none d-md-block">
        <img src={{item.images.0.src}} alt={{item.name}}>
      </div>
    {{/if}}

    <div class="d-flex flex-column video-contents-container">
      <h4 class="mb-2">
        {{item.name}}
        [{{#link-to "video.edit" item.id}}view{{/link-to}}]
      </h4>
      {{#if item.customers.length}}
        <div class="mb-2">
          {{#each item.customers as |customer|}}
            <span class="badge badge-pill badge-info">
              <span class="d-block m-1">Customer: {{customer.name}}</span>
            </span>
          {{/each}}
        </div>
      {{/if}}
      {{#if item.description}}
        <div class="mb-2">{{{item.description}}}</div>
      {{/if}}
      <small class="d-block">Brightcove ID: {{item.id}}</small>
    </div>
  </div>


  <div class="d-md-flex flex-column d-none">
    {{#if item.createdAt}}
      <small>{{entypo-icon "clock"}} Created {{moment-format item.createdAt "MMM Do, YYYY h:mm a"}}</small>
    {{/if}}
    {{#if item.updatedAt}}
      <small>{{entypo-icon "clock"}} Updated {{moment-format item.updatedAt "MMM Do, YYYY h:mm a"}}</small>
    {{/if}}
    {{#if item.publishedAt}}
      <small>{{entypo-icon "clock"}} Published {{moment-format item.publishedAt "MMM Do, YYYY h:mm a"}}</small>
    {{/if}}
  </div>
</li>
