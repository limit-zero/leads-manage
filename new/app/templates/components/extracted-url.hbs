<div class="card-header">
  {{#if isLoading}}
    Crawling...
  {{else}}
    <h4 class="mb-0">
      {{#if didError}}
        {{entypo-icon "warning" class="text-danger"}}
        {{errorMessage}}
      {{else}}
        {{extracted-url/header model=model}}
      {{/if}}
    </h4>
  {{/if}}
</div>

<div class="card-body">
  {{#if isLoading}}
    <small class="text-muted">Crawling link, please wait...</small>
    <div class="progress mb-0">
      <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
    </div>
  {{else}}
    {{extracted-url/manage model=model isLoading=isLoading errorMessage=errorMessage}}
    <div class="row mt-3">
      <div class="col">
        <button class="btn btn-secondary" {{action "crawl" false}}>
          {{entypo-icon "cycle"}} Crawl Again
        </button>
        <br>
        <small>
          Last retrieved: {{ moment-from-now model.lastCrawledDate }}
        </small>
      </div>
    </div>
  {{/if}}
</div>

