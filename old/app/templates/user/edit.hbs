{{#nav-breadcrumbs as |crumbs|}}
  {{#crumbs.item}}{{#link-to "user.index"}}{{entypo-icon "user"}} Users{{/link-to}}{{/crumbs.item}}
  {{#crumbs.item active=true}}{{ model.givenName }} {{ model.familyName }}{{/crumbs.item}}
{{/nav-breadcrumbs}}

<form {{action (route-action "update" model) on="submit"}}>
  <div class="card model-form">
    <div class="card-header"></div>
    <div class="card-body">
      {{ partial "user/form" }}
    </div>
    <div class="card-footer d-flex justify-content-between">
      {{model-save-button disabled=isActionRunning}}

      <div class="btn-group btn pr-0">
        <button class="btn btn-info clickable" disabled={{isActionRunning}} {{action "displayChangePassword"}}>
          {{entypo-icon "key"}} Change Password
        </button>
        {{confirm-button
          icon="trash"
          label="Delete"
          class="btn-danger"
          disabled=isActionRunning
          onConfirm=(route-action "delete" model.id "user.index")
        }}
      </div>

    </div>
  </div>
</form>

{{change-password-modal isChangePasswordOpen=isChangePasswordOpen model=model}}

